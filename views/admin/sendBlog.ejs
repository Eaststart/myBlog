<% include common/header.ejs %>
<div class="layui-container" style="max-width:600px;margin-top:40px;">
    <a class="layui-btn layui-btn-small layui-btn-normal" style="position:relative;left:110px;top:-10px;" href="/admin/blog"><i class="layui-icon"></i></a>
    <form class="layui-form" action="/admin/sendBlog/getBlog" method="post" enctype="multipart/form-data">
        <div class="layui-form-item">
            <label class="layui-form-label">标题</label>
            <div class="layui-input-block">
                <input type="text" name="title" required lay-verify="required" placeholder="请输入标题" autocomplete="off"
                       class="layui-input">
            </div>
        </div>

        <div class="layui-form-item">
            <div style="float:left;">
                <label class="layui-form-label">分类</label>
                <div class="layui-input-block" >
                    <select autocomplete="off" name="kindId" lay-verify="required" style="display:block;position:relative;top:10px;" >
                        <%for(var x=0;x<list.length;x++){%>
                        <option value=<%=list[x]._id%>><%=list[x].name%></option>
                        <%}%>
                    </select>
                </div>
            </div>
            <a style="float:left;position:relative;top:10px;left:10px;" class="layui-btn layui-btn-mini layui-btn-radius layui-btn-normal" href="/admin/blogKind/kindAdd">添加分类</a>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">发布时间</label>
            <div class="layui-input-block">
                <input type="text"  class="layui-input"  id="sendTime" required lay-verify="required" name="sendTime">
            </div>
        </div>
        <div class="layui-form-item layui-form-text">
            <label class="layui-form-label">内容</label>
            <div class="layui-input-block">
                <textarea name="content" id="content" placeholder="请输入内容" class="layui-textarea" ></textarea>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button type="submit" class="layui-btn" id="submit">立即提交</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>
</div>
</html>
<% include common/footer.ejs %>
