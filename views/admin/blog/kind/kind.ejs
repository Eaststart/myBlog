<%include ../../common/header.ejs%>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">
    <% include ../../common/nav.ejs%>
    <%include ../common/leftSide.ejs%>

    <div class="layui-body">
        <!-- 内容主体区域 -->
        <div style="padding: 15px;">
            <a class="layui-btn layui-btn-radius layui-btn-normal" href="/admin/blogKind/kindAdd">添加分类</a>
            <table class="layui-table" lay-size="lg">
                <colgroup>
                    <col width="150">
                    <col width="200">
                    <col>
                </colgroup>
                <thead>
                <tr>
                    <th>序号</th>
                    <th>类名</th>
                    <th>创建时间</th>
                    <th>修改&删除</th>
                </tr>
                </thead>
                <tbody class="superShow">
                <% for(var x=0;x<list.length;x++){%>
                <tr>
                    <td><%=x+1%></td>
                    <td><%=list[x].name%></td>
                    <td><%=list[x].foundTime%></td>

                    <td>
                        <a href="/admin/blogKind/kindEdit?id=<%=list[x]._id%>" class="layui-btn layui-btn-small layui-btn-normal">修改</a>
                        <a href="/admin/blogKind/remove?id=<%=list[x]._id%>" class="layui-btn layui-btn-small layui-btn-danger">删除</a>
                    </td>
                </tr>
                <%}%>
                </tbody>
            </table>
        </div>
    </div>
    <%include ../../common/cor.ejs%>
</div>
</body>
</html>
<%include ../../common/footer.ejs%>