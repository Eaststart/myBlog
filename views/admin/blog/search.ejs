<% include ../common/header.ejs %>
</head>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">
    <% include ../common/nav.ejs %>
    <% include common/leftSide.ejs %>
    <!-- 内容主体区域 -->
    <div class="layui-body">
        <!-- 内容主体区域 -->
        <div style="padding: 15px;">
            <form class="layui-form" action="/admin/blog/search" method="post" style="max-width:500px;overflow:hidden;"
                  enctype="multipart/form-data">
                <div class="layui-form-item" style="float:left;">
                    <div class="layui-input-block" style="margin-left:0;width:240px;">
                        <input type="text" name="keywords"  placeholder="请输入描述" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="" style="float:left;">
                    <select autocomplete="off" name="kind" lay-verify="required" style="display:block;border:1px solid #e6e6e6;height:38px;margin-left:6px;" >
                        <option value="title">按标题</option>
                        <option value="kind">按分类</option>
                        <option value="sendTime">按创建时间</option>
                    </select>
                </div>
                <div style="float:left;margin-left:6px;">
                    <button type="submit" class="layui-btn">确认</button>
                </div>
            </form>
            <table class="layui-table" lay-size="lg" id="listShow">
                <colgroup>
                    <col width="150">
                    <col width="200">
                    <col>
                </colgroup>
                <thead>
                <tr>
                    <th>序号</th>
                    <th>标题</th>
                    <th>分类</th>
                    <th>状态</th>
                    <th>创建时间</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody class="superShow">
                <% for(var y = 0;y < show.length;y++){ %>
                <tr>
                    <td><%=y+1%></td>
                    <td><%= show[y].title %></td>
                    <td><%= show[y].kind %></td>
                    <td><%= show[y].state %></td>
                    <td><%= show[y].sendTime %></td>
                    <td>
                        <a href="/admin/blog/edit?id=<%= show[y]._id %>"
                           class="layui-btn layui-btn-small layui-btn-normal">查看&修改</a>
                        <a href="/admin/blog/remove?id=<%= show[y]._id %>"
                           class="layui-btn layui-btn-small layui-btn-danger">删除</a>
                    </td>
                </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <% include ../common/cor.ejs %>
</div>
</body>
</html>
<% include ../common/footer.ejs %>
<script type="text/javascript" src="/js/admin/listShow.js"></script>