<% include ../common/header.ejs %>
<style type="text/css">
    #profile img{
        min-width:200px;
        min-height:200px;

    }
    #profile input{
        min-width:200px;
        min-height:200px;
    }
</style>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">
    <% include ../common/nav.ejs %>
    <% include common/leftSide.ejs %>
    <!-- 内容主体区域 -->
    <div class="layui-body">
        <!-- 内容主体区域 -->
        <div style="padding: 15px;">
            <form class="layui-form" action="/admin/img/doImgAdd" method="post" style="max-width:400px;" enctype="multipart/form-data">
                <input type="hidden" name="kind" value="<%=list.name%>">
                <div class="layui-form-item">
                    <label class="layui-form-label">名称</label>
                    <div class="layui-input-block">
                        <input type="text" name="name" required lay-verify="required" placeholder="请输入账号"
                               autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <div style="float:left;">
                        <label class="layui-form-label">分类</label>
                        <div class="layui-input-block" >
                            <select autocomplete="off" name="kindId" lay-verify="required" style="display:block;position:relative;top:10px;" >
                                <%for(var x=0;x<list.length;x++){%>
                                <option value=<%=list[x]._id%>><%=list[x].name%></option>
                                <%}%>
                            </select>
                        </div>
                    </div>
                    <a style="float:left;position:relative;top:10px;left:10px;" class="layui-btn layui-btn-mini layui-btn-radius layui-btn-normal" href="/admin/imgKind/imgKindAdd">添加分类</a>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">创建时间</label>
                    <div class="layui-input-block">
                        <input type="text"  class="layui-input"  id="sendTime" required lay-verify="required" name="foundTime">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">图片</label>
                    <div class="layui-input-block" id="profile">
                        <img src="" alt="点我" id="profileImg">
                        <input type="file" name="img" value="" id="upProfile" required lay-verify="required">
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-input-block">
                        <button class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
                        <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <% include ../common/cor.ejs %>
</div>
</body>
</html>
<% include ../common/footer.ejs %>
<script type="text/javascript" src="/js/admin/userSuper/add.js"></script>